{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": { 
    "jsx": "react-jsx", 
    "baseUrl": ".",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "skipLibCheck": true,
    "types": ["vite/client"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "src/**/*.ts", "src/**/*.tsx", "vite.config.ts"],
  "exclude": ["dist", "build", ".next", "node_modules", "coverage"]
}
