{
  "type": "object",
  "properties": {
    "apiRelativeBase": { 
      "type": "string",
      "description": "Base path for API requests (e.g., '/api')"
    },
    "featureFlags": {
      "type": "object",
      "properties": {
        "enable3D": { "type": "boolean" },
        "enableMetricsPolling": { "type": "boolean" },
        "enableCircuitBreaker": { "type": "boolean" },
        "enableHealthMonitoring": { "type": "boolean" }
      },
      "additionalProperties": false
    },
    "polling": {
      "type": "object",
      "properties": {
        "metricsInterval": { "type": "number", "minimum": 1000 },
        "healthCheckInterval": { "type": "number", "minimum": 1000 }
      },
      "additionalProperties": false
    },
    "circuitBreaker": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "resetEndpoint": { "type": "string" }
      },
      "additionalProperties": false
    }
  },
  "required": ["apiRelativeBase"],
  "additionalProperties": false
}