# Headers for API endpoints (proxied to backend)
/api/*
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  X-Served-By: royal-equips-proxy

# Headers for health endpoints (proxied to backend)
/health
  X-Content-Type-Options: nosniff
/healthz
  X-Content-Type-Options: nosniff
/readyz
  X-Content-Type-Options: nosniff
/metrics
  X-Content-Type-Options: nosniff

# Headers for SPA (index.html and assets)
/index.html
  Cache-Control: no-store, no-cache, must-revalidate
  X-Content-Type-Options: nosniff
  X-Frame-Options: SAMEORIGIN

# Headers for static assets
/assets/*
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff
