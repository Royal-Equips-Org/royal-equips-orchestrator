{
  "$schema": "./config.schema.json",
  "apiRelativeBase": "/api",
  "featureFlags": {
    "enable3D": false,
    "enableMetricsPolling": true,
    "enableCircuitBreaker": true,
    "enableHealthMonitoring": true
  },
  "polling": {
    "metricsInterval": 15000,
    "healthCheckInterval": 5000
  },
  "circuitBreaker": {
    "enabled": true,
    "resetEndpoint": "/api/admin/circuit/reset"
  },
  "secrets": {
    "cacheTTLms": 300000,
    "enableMetrics": true
  },
  "development": {
    "apiRelativeBase": "http://localhost:10000",
    "circuitBreaker": {
      "resetEndpoint": "http://localhost:10000/admin/circuit/reset"
    }
  }
}