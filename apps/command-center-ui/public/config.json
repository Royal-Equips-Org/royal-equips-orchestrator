{
  "$schema": "./config.schema.json",
  "apiRelativeBase": "/api",
  "featureFlags": {
    "enable3D": true,
    "enableMetricsPolling": true,
    "enableCircuitBreaker": true,
    "enableHealthMonitoring": true
  },
  "polling": {
    "metricsInterval": 5000,
    "healthCheckInterval": 3000
  },
  "circuitBreaker": {
    "enabled": true,
    "resetEndpoint": "/api/admin/circuit/reset"
  },
  "secrets": {
    "cacheTTLms": 300000,
    "enableMetrics": true
  },
  "backends": {
    "flask": "http://localhost:10000",
    "aira": "http://localhost:3001",
    "orchestrator": "http://localhost:3002"
  }
}