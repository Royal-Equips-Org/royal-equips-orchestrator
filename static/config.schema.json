{
  "type": "object",
  "properties": {
    "apiRelativeBase": { 
      "type": "string",
      "description": "Base path for API requests (e.g., '/api')"
    },
    "featureFlags": {
      "type": "object",
      "properties": {
        "enable3D": { "type": "boolean" },
        "enableMetricsPolling": { "type": "boolean" },
        "enableCircuitBreaker": { "type": "boolean" },
        "enableHealthMonitoring": { "type": "boolean" }
      },
      "additionalProperties": false
    },
    "polling": {
      "type": "object",
      "properties": {
        "metricsInterval": { "type": "number", "minimum": 1000 },
        "healthCheckInterval": { "type": "number", "minimum": 1000 }
      },
      "additionalProperties": false
    },
    "circuitBreaker": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "resetEndpoint": { "type": "string" }
      },
      "additionalProperties": false
    },
    "secrets": {
      "type": "object",
      "properties": {
        "cacheTTLms": { "type": "number", "minimum": 1000 },
        "enableMetrics": { "type": "boolean" }
      },
      "additionalProperties": false
    },
    "development": {
      "type": "object",
      "description": "Development-specific configuration overrides",
      "properties": {
        "apiRelativeBase": { 
          "type": "string",
          "description": "Development API base URL (e.g., 'http://localhost:10000')"
        },
        "circuitBreaker": {
          "type": "object",
          "properties": {
            "resetEndpoint": { "type": "string" }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["apiRelativeBase"],
  "additionalProperties": false
}