{
  "name": "royal-equips-orchestrator",
  "private": true,
  "packageManager": "pnpm@10.17.0",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc -p tsconfig.base.json --noEmit",
    "test": "jest --runInBand --passWithNoTests",
    "prepare": "node -e \"process.exit((process.env.CI==='true'||process.env.NODE_ENV==='production')?0:1)\" || husky install",
    "fix-agent": "node scripts/fix-agent.mjs --watch",
    "start:api": "pnpm --filter @royal-equips/orchestrator-api start",
    "dev:api": "pnpm --filter @royal-equips/orchestrator-api dev"
  },
  "devDependencies": {
  "eslint": "8.58.0",
  "@typescript-eslint/eslint-plugin": "8.43.0",
  "@typescript-eslint/parser": "8.43.0",
  "typescript-eslint": "8.43.0",
    "@typescript-eslint/eslint-plugin": "8.43.0",
    "@typescript-eslint/parser": "8.43.0",
    "@types/jest": "29",
    "chokidar": "^4.0.3",
    "diff": "^8.0.2",
    "execa": "^9.6.0",
    "fs-extra": "^11.3.1",
    "globals": "15.15.0",
    "globby": "^14.1.0",
    "husky": "^9.1.7",
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "prettier": "3.6.2",
    "tsx": "^4.20.5",
    "typescript": "5.6.3",
    "yaml": "^2.8.1"
  },
  "engines": {
    "node": "20"
  }
}
