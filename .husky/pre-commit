# Skip hooks when explicitly requested or on CI
if [ -n "$SKIP_HUSKY" ] || [ -n "$CI" ]; then
  echo "Husky skipped"; exit 0
fi

# Lint only source files using our enhanced lint script
if command -v pnpm >/dev/null 2>&1; then
  echo "🔍 Running ESLint on source files only..."
  pnpm lint || exit 1
  echo "✅ Source code linting passed"
fi
