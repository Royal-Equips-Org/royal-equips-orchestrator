# Skip hooks when explicitly requested or on CI
if [ -n "$SKIP_HUSKY" ] || [ -n "$CI" ]; then
  echo "Husky pre-push skipped"; exit 0
fi

# TypeScript type checking and tests are now disabled by default
# To enable them, set RUN_CHECKS=1 before pushing:
#   RUN_CHECKS=1 git push

if [ -n "$RUN_CHECKS" ]; then
  if command -v pnpm >/dev/null 2>&1; then
    echo "ğŸ”§ Running optional TypeScript type checking..."
    pnpm typecheck || echo "âš ï¸ Type issues found. Run 'pnpm typecheck' to fix."
    
    echo "ğŸ§ª Running optional unit tests..."
    pnpm test || echo "âš ï¸ Test issues found. Run 'pnpm test' to fix."
    
    echo "âœ… Pre-push checks completed (all non-blocking)"
  fi
else
  echo "âœ… Pre-push checks skipped (disabled by default)"
  echo "   To enable: RUN_CHECKS=1 git push"
fi