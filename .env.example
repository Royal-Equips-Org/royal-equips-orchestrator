# Example environment file for Royal Equips Orchestrator
#
# Copy this file to `.env` and fill in your own values. Do not commit
# secrets back to version control. When deploying on Render, these
# variables can be set via the dashboard and marked as secrets.

# Shopify credentials
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=
SHOP_NAME=

# OpenAI API key for customer support agent
OPENAI_API_KEY=

# Google BigQuery configuration for analytics export
BIGQUERY_PROJECT_ID=
BIGQUERY_DATASET=
BIGQUERY_TABLE=

# Database connection URL (optional). Example: postgres://user:pass@host:port/db
DATABASE_URL=

# Port configuration (used by the Dockerfile). Defaults to 8000 if unset.
PORT=8000

# Logging level (INFO, DEBUG, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Health check log suppression (default: true) 
SUPPRESS_HEALTH_LOGS=true

# Disable all access logging (default: false)
DISABLE_ACCESS_LOG=false

# Service version (optional, used in status endpoint)
SERVICE_VERSION=0.1.0

# Holographic Control Center configuration
CONTROL_CENTER_VARIANT=holographic
GITHUB_TOKEN=
VOICE_ENABLED=true
POLL_SECONDS=30
OPENAI_MODEL=gpt-4o-mini
WHISPER_MODEL=whisper-1