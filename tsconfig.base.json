{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": { "@types/*": ["./types/*"] },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "apps/*/src/**/*.ts",
    "apps/*/src/**/*.tsx", 
    "packages/*/src/**/*.ts",
    "packages/*/src/**/*.tsx",
    "packages/shared/**/*.ts",
    "apps/command-center-ui/vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "**/*.min.js"
  ]
}
